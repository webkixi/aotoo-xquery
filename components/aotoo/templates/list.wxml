<wxs src="../util.wxs" module="util" />
<wxs module="inner">
  var scopeData = {}
  function store(key, val){
    if (key) {
      if (val) scopeData[key] = val
      else {
        return scopeData[key]
      }
    }
  }
  module.exports = {
    store: store
  }
</wxs>
