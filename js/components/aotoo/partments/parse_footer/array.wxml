<wxs src="../../util.wxs" module="util" />
<import src="../parse_common/index.wxml" />
<import src="../../templates/inner_templates.wxml" />

<template name="son-content">
  <block wx:if="{{util.isString(item)}}">
    <view class="hf-item">
      <text user-select="{{util.strlen(item) > 50}}">{{item}}</text>
    </view>
  </block>
  <block wx:elif="{{item.data && util.isArray(item.data)}}">
    <template is="@list"  data="{{ props: {...item, treeid: util.treeid(item), containerClass: 'hf-item '+(item.containerClass||'')} }}" />
  </block>
  <block wx:else>
    <template is="@item" data="{{ props: {...item, treeid: util.treeid(item), containerClass: 'hf-item '+(item.containerClass||'')} }}" />
  </block>
</template>

<!-- 这个key要小心 -->
<view class="hfooter {{item.footerClass||''}}" style="{{item.footerStyle||''}}">
  <template is="son-content" data="{{item: son}}"/>
</view>