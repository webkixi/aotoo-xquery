page{
  --date-item-height: 140rpx;
  --append-date-item-height: 0rpx;
  --calendar-week-tils-height: 50rpx;
  --calendar-month-header: 96rpx;
  --date-item-today-font-size: 30rpx
}

.container {
  padding: 0;
  width: 100vw;
  height: 100vh;
}

.calendar-list {
  height: 90vh;
  width: 100vw;
  position: relative;
  background: #fff;
}

.calendar-list .calendar-list-item {
  height: calc(var(--date-item-height) * 5 + var(--append-date-item-height) + var(--calendar-month-header));
  /* height: calc(var(--date-item-height) * 5); */
  position: relative;
  margin-bottom: 20rpx;
  /* height: 400px; */
}

.calendar-list .calendar-list-item .invalid {
  color: #ccc;
}

.calendar-list .calendar-list-item .valid.selected {
  background-color: #2773f5;
  border-radius: 6rpx;
  color: #fff
}
.calendar-list .calendar-list-item .valid.range {
  background-color: #b4cfff;
  border-radius: 6rpx;
  color: #fff
}

.calendar-list .calendar-month-header {
  height: var(--calendar-month-header);
  line-height: var(--calendar-month-header);
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.calendar-list .calendar-month-header.mode3 {
  margin-bottom: 80rpx;
}

.week-box {
  --calendar-month-header: 136rpx;
  height: var(--calendar-month-header);
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}

.week-box > .htitle {
  display: block;
  margin-bottom: 1em
}

.calendar-weektils-header {
  margin-bottom: 0.6em;
  margin-left: 1.2em;
  font-size: 1.2em;
  display: flex;
  justify-content: space-between;
}

.calendar-weektils-header .button-today {
  margin-right: 2em;
  font-size: 0.9em;
  width: 1.4em;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid red;
  border-radius: 50%;
}

.calendar-weektils {
  background: #f5f5f5;
  color: #666;
  width: 100vw;
  height: var(--calendar-week-tils-height);
  font-size: 28rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.calendar-weektils.mode3{
  /* margin-top: 100rpx; */
  /* position: fixed;
  top: 110rpx;
  z-index: 99; */
}

.calendar-weektils .calendar-weektils-item {
  flex: 1;
  text-align: center;
}

.date-list {
  position: relative;
  z-index: 2;
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  box-sizing: border-box;
  padding: 0 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.date-list > ui-item.ui-item {
  width: calc(100% / 7);
}

.date-list .date-item {
  width: 100%;
  height: var(--date-item-height);
  /* text-align: center; */
  padding: 15rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-weight: 400;
  font-size: 36rpx;
  position: relative;
}

.date-list .date-item.today {
  font-size: var(--date-item-today-font-size);
  border: 1px solid red;
  border-radius: 10rpx;
}

.date-list .date-item .lunar-date {
  font-size: 24rpx;
}

.date-list.scale .date-item {
  height: calc(var(--date-item-height) * 0.82);
  font-size: 34rpx;
}

.date-list.scale .date-item.today {
  font-size: var(--date-item-today-font-size);
}

.date-list.scale .date-item .lunar-date {
  font-size: 22rpx;
}












.swiper-list{
  height: 100vh;
  width: 100vw;
  position: relative;
  background: #fff;
}

.swiper-list .swiper-item{
  height: calc(var(--date-item-height) * 5 + var(--append-date-item-height) + var(--calendar-month-header));
  /* height: calc(var(--date-item-height) * 5); */
  position: relative;
  margin-bottom: 20rpx;
}








.slip-list{
  width: 100vw;
  box-sizing: border-box;
}

.slip-item{
  height: 70px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
  box-sizing: border-box;
  flex: 0 0 auto;
  transition: margin-left .2s ease;
}

.slip-item > .htitle, .slip-item > .slip-menus{
  flex: 0 0 auto;
  width: calc(100vw - 72px);
  display: flex;
  align-items: center;
  height: 100%;
  border-bottom: 1px solid #f5f5f5;
}